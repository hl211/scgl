/* page/zhuye/index.wxss */

@import "../common/lib/weui.wxss";










/*swiper start*/

.swiper-container {
    position: relative;
}

.swiper-container .swiper {
    height: 300rpx;
}

.swiper-container .swiper .img {
    width: 100%;
    height: 100%;
}

.swiper-container .dots {
    position: absolute;
    right: 40rpx;
    bottom: 20rpx;
    display: flex;
    justify-content: center;
}

.swiper-container .dots .dot {
    margin: 0 10rpx;
    width: 28rpx;
    height: 28rpx;
    background: #fff;
    border-radius: 50%;
    transition: all .6s;
    font: 300 18rpx/28rpx "microsoft yahei";
    text-align: center;
}

.swiper-container .dots .dot.active {
    background: #f80;
    color: #fff;
}










/*swiper end*/

.nav-list {
    margin: 10rpx 30rpx;
    background-color: #FFFFFF;
    border-radius: 4rpx;
    overflow: hidden;
    padding: 5rpx;
    display: flex;
    justify-content: space-around;
}

.nav-list .item {
    padding: 5rpx;
}

.sc-list {
    margin: 20rpx 30rpx;
    display: flex;
    flex-direction: column;
    background-color: #FFFFFF;
    text-align: center;
}

.sc-list .item {
    display: flex;
    flex-direction: row;
    padding: 5rpx;
    border-bottom: 1px solid #ddd;
    overflow: hidden;
}

.item-img {
    width: 80px;
    height: 90%;
    padding: 5px;
    background-color: gray;
}

.item-cont {
    display: flex;
    flex-direction: column;
    text-align: center;
    flex: 1;
}

.item-cont .name {
    font-size: 16px;
    text-align: left;
}

.item-cont .time {
    font-size: 10px;
    padding: 5rpx;
    text-align: left;
}

.item-cont .market {
    font-size: 10px;
    padding-top: 5rpx;
    text-align: left;
}

.item-cont .price {
    display: flex;
    flex: 1;
    flex-direction: row;
    justify-content: space-between;
}

.item-cont .price .more {
    padding-right: 10px;
}