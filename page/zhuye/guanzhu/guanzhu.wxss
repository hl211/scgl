/* page/news/index.wxss */

@import "../../common/lib/weui.wxss";








/**index.wxss**/

.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #777777;
    text-align: center;
    line-height: 80rpx;
}

.swiper-tab-list {
    font-size: 30rpx;
    display: inline-block;
    width: 33.33%;
    color: #777777;
}

.on {
    color: #da7c0c;
    border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.swiper-box view {
    text-align: center;
}

.kind-list-item {
    margin: 20px 15rpx;
    background-color: #FFFFFF;
    border-radius: 4rpx;
    overflow: hidden;
    padding: 5rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.bg1 {
    padding: 5px, 5px, 0px, 5px;
    height: 125px;
    font-size: 0px;
    text-align: center;
}

.img {
    width: 99%;
    height: 80%;
}